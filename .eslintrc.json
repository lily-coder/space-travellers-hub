{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-shadow": "off",
      "no-param-reassign": "off",
      "eol-last": "off",
      "no-restricted-globals": ["error", "event", "fdescribe"],
      "import/extensions": [ 1, {
        "js": "always", "json": "always"
      }],
      "react/jsx-uses-react": "error",   
      "react/jsx-uses-vars": "error" 
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ],
    "plugins": ["react"]
  }